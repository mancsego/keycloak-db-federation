<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="user-store" transaction-type="JTA">
        <class>mancsego.github.io.entity.User</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://host.docker.internal:3306/db"/>
            <property name="hibernate.connection.username" value="db_user"/>
            <property name="hibernate.connection.password" value="test1234"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.connection.datasource" value="user-store"/>
        </properties>
    </persistence-unit>
</persistence>